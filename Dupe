local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- 1. Create the GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TestDupeGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local dupeButton = Instance.new("TextButton")
dupeButton.Name = "DupeButton"
dupeButton.Size = UDim2.new(0, 150, 0, 50) -- Size of the button
dupeButton.Position = UDim2.new(0.5, -75, 0.8, 0) -- Positioned near bottom center
dupeButton.Text = "Dupe"
dupeButton.TextSize = 24
dupeButton.BackgroundColor3 = Color3.fromRGB(0, 85, 255)
dupeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
dupeButton.Font = Enum.Font.SourceSansBold
dupeButton.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)
corner.Parent = dupeButton

-- 2. Define the Dupe Functionality
dupeButton.MouseButton1Click:Connect(function()
	local targetName = "trophyWitch"
	local item = nil
	
	-- Check Backpack (Inventory) first
	if player.Backpack:FindFirstChild(targetName) then
		item = player.Backpack[targetName]
	-- Check Character (Equipped) second
	elseif player.Character and player.Character:FindFirstChild(targetName) then
		item = player.Character[targetName]
	end
	
	if item then
		-- Look for the "Amount" IntValue inside the item
		local amountObj = item:FindFirstChild("Amount")
		
		if amountObj then
			amountObj.Value = amountObj.Value + 1
			print("Success: " .. targetName .. " Amount set to " .. amountObj.Value)
		else
			warn("Found " .. targetName .. " but it has no 'Amount' value inside.")
		end
	else
		warn("Could not find " .. targetName .. " in Backpack or Character.")
	end
end)
